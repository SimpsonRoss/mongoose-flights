<%- include('../partials/header') %>
<br>
<h2>All Flights</h2>
<table id="list">
  <thead>
    <tr>
      <th>Departure</th>
      <th>Airport</th>
      <th>Airline</th>
      <th>Flight No.</th>
      <th>Layover</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% let sortedFlights = [...flights];
    sortedFlights.sort((a, b) => {
      return new Date(a.departs) - new Date(b.departs);
    }); %>
    <% sortedFlights.forEach(function(flight) { %>
      <tr class="<%= new Date(flight.departs) < new Date() ? 'past-flight' : '' %>">
        <td><%= flight.departs.toLocaleDateString()%></td>
        <td><%= flight.airport %></td>
        <td><%= flight.airline %></td>
        <td><%= flight.flightNo %></td>
        <td><%= (flight.destinations.length - 1) <= 0 ? 'Non-Stop' : `${flight.destinations.length - 1} Stops`;  %></td>
        <td><a href="/flights/<%= flight._id %>">DETAILS</a></td>
      </tr>
    <% }); %>
  </tbody>
</table>

<%- include('../partials/footer') %>
