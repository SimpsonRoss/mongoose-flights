<%- include('../partials/header') %>
<br>
<h2>Add a Flight</h2>
<form id="new-form" action="/flights" method="POST">
  <br>
  <div class="form-group">
    <label>Departure:</label>
    <input type="datetime-local" name="departs" >
  </div>
  <br>
  <div class="form-group">
    <label>Airport:</label>
    <select name="aiport">
      <option value="ATL">ATL</option>
      <option value="LAX">LAX</option>
      <option value="DXB">DXB</option>
      <option value="LHR">LHR</option>
      <option value="CDG">CDG</option>
      <option value="AMS">AMS</option>
      <option value="IST">IST</option>
      <option value="JFK" selected>JFK</option>
    </select>
  </div>
  <br>
  <div class="form-group">
    <label>Airline:</label>
    <select name="airline">
      <option value="American Airlines">American Airlines</option>
      <option value="Delta Air Lines">Delta Air Lines</option>
      <option value="Southwest Airlines">Southwest Airlines</option>
      <option value="United Airlines">United Airlines</option>
      <option value="Ryanair">Ryanair</option>
      <option value="Lufthansa">Lufthansa</option>
      <option value="Air China">Air China</option>
      <option value="Emirates" selected>Emirates</option>
    </select>
  </div>
  <br>
  <div class="form-group">
    <label>Flight Number:</label>
    <input type="number" name="flightNo">
  </div>
  <br>
  <button type="submit" class="btn btn-dark btn-sm">Add Flight</button>

</form>

<p>
  <%= errorMsg %>
</p>

<%- include('../partials/footer') %>
